#include <Servo.h>
Servo direccion;

int IN1 = 5;
int IN2 = 4;
int ENA = 3;

void setup() {
  direccion.attach(10);      // Servo conectado al pin 10
  direccion.write(45);       // Gira la direcci√≥n a 45 grados
  delay(1000);               // Espera 1 segundo

  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(ENA, OUTPUT);

  digitalWrite(IN1, HIGH);   // Motor avanza
  digitalWrite(IN2, LOW);
  analogWrite(ENA, 160);

  delay(12000);              // 3 vueltas

  digitalWrite(IN1, LOW);    // Se detiene
  digitalWrite(IN2, LOW);
}

void loop() {
}
