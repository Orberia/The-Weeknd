int trigPin = 9;
int echoPin = 8;

int IN1 = 5;
int IN2 = 4;
int ENA = 3;

long duration;
int distance;

void setup() {
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(ENA, OUTPUT);
}

void loop() {
  // Enviar pulso
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);

  // Recibir eco
  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2;

  // Si hay obst√°culo cerca, se detiene
  if (distance < 20) {
    digitalWrite(IN1, LOW);
    digitalWrite(IN2, LOW);
  } else {
    digitalWrite(IN1, HIGH);
    digitalWrite(IN2, LOW);
    analogWrite(ENA, 160);
  }

  delay(100);
}
